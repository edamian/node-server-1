{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [2, 4],
        "quotes": [2, "single"],
        "linebreak-style": [2, "unix"],
        "semi": [2, "always"],
		"no-tabs": 0,
		"comma-dangle": ["error", "never"],
        "quote-props": 0,
        "no-unused-vars": [1, { "ignoreSiblings": true, "argsIgnorePattern": "res|next|^err" }]
    }
}